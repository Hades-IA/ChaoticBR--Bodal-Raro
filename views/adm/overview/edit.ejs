<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../../partials/head.ejs") %>
    <title>Edit Overview</title>
</head>

<body>
    <%- include("../../partials/admnavbar.ejs") %>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Edit Overview</h1>
            </div>
            <div class="card-body mt-3">
                <form action="/adm/overview/edited" method="post">
                    <label>Overview</label>
                    <input type="hidden" name="id" value="<%= overview.id %>">
                    <textarea class="form-control mt-1 article" name="body"
                        placeholder="Overview here"><%=overview.body %></textarea>

                    <label class="mt-3">Overview BR</label class>

                    <textarea class="form-control mt-1 article" name="bodybr"
                        placeholder="Escreva o Artigo Aqui"><%= overview.bodybr %></textarea>
                    <label class="mt-1"> CardID</label>

                    <select name="cardID" class="form-control mt-1 mb-1 fit-content" id="">
                        <% cards.forEach( (card) =>{ %>
                        <% if(card.id == overview.card_id){ %>
                        <option value="<%= card.id %>" selected> <%= card.name%> </option>
                        <% }else{ %>
                        <option value="<%= card.id %>"> <%= card.name%> </option>
                        <% } %>

                        <%}) %>
                    </select>
                    <button class="btn btn-success mt-3">Public</button>
                </form>
            </div>
        </div>


    </div>


    <%- include("../../partials/footer.ejs") %>
    <%- include("../../partials/script.ejs") %>
    <%- include("../../partials/tiny.ejs") %>
    <%- include("../../partials/admin.ejs") %>
</body>

</html>