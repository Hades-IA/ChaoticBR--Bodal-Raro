<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../../partials/head.ejs") %>
    <title>Article List</title>
</head>

<body>
    <div class="container">
        <h2>Article List</h2>
        <a href="/adm/article/create" class="btn btn-info mt-4 ml-auto mr-auto">Create New Article</a>
        <table class="table table-bordered table-dark mt-3">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Titlebr
                    </th>
                    <th>
                        Slug
                    </th>
                    <th>Category</th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>

                <% article.forEach(article =>{ %>
                <tr>
                    <th><%= article.id %></th>
                    <th><%= article.title %></th>
                    <th><%= article.titlebr %></th>
                    <th><%= article.slug %></th>
                    <th><%= article.category.slug %></th>
                    <th class="d-flex">

                        <a href="/adm/article/edit/<%= article.id %>" class="btn btn-warning">Edit</a
                            class="btn btn-warning">


                        <form action="/adm/article/delete" method="POST" class="d-alignCenter"
                            onsubmit="confirmeDelete(event, this)">
                            <input type="hidden" name="id" value="<%= article.id  %>">
                            <button class="btn btn-danger ml-3">Delete</button class="btn btn-warning">
                        </form>

                    </th>
                </tr>
                <%}) %>

            </tbody>
        </table>
    </div>

    <%- include("../../partials/script.ejs")%>
    <%- include("../../partials/admin.ejs")%>

</body>

</html>