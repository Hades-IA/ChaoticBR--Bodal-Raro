<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../../partials/head.ejs") %>
    <title>New Article</title>
</head>

<body>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Create New Article</h1>
            </div>
            <div class="card-body mt-3">
                <form action="/adm/article/save" method="post">
                    <label>Article</label>
                    <input class="form-control mt-2" type="text" name="title" placeholder="Title">
                    <textarea class="form-control mt-1 article" name="body" placeholder="Article here"></textarea>
                    <input class="form-control mt-2" type="text" name="thumbnail" placeholder="thumbnail">
                    <label class="mt-3">Artigo BR</label class>
                    <input class="form-control mt-2" type="text" name="titlebr"
                        placeholder="Escreva o Titulo do Artigo">
                    <textarea class="form-control mt-1 article" name="bodybr"
                        placeholder="Escreva o Artigo Aqui"></textarea>
                    <label class="mt-1"> Category</label>
                    <select name="category" class="form-control mt-1 mb-1 fit-content" id="">
                        <% category.forEach( (category) =>{ %>
                        <option value="<%= category.id %>"> <%= category.title%> </option>
                        <%}) %>
                    </select>
                    <button class="btn btn-success mt-3">Public</button>
                </form>
            </div>
        </div>


    </div>


    <%- include("../../partials/footer.ejs") %>
    <%- include("../../partials/script.ejs") %>
    <%- include("../../partials/tiny.ejs") %>
    <%- include("../../partials/admin.ejs") %>
</body>

</html>